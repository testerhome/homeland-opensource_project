<div class="article-sidebar sidebar col-md-3 hide-ios">
  <div class="card">
 
    <div class="card-body">

      <% if can? :create, OpensourceProject %>
        <%= link_to t('plugin.new_project'), new_opensource_project_path, class: 'btn btn-block btn-primary submit-osp-button' %>
      <% end %>
      <div class="alert alert-info ttf-link"><a class="" href="/github_statistics">点击查看开源贡献榜单</a></div>
      
      <hr />
      <%= link_to "RSS 订阅", opensource_projects_path(format: 'xml'), class: 'btn btn-block btn-default' %>

      <% if can? :publish, OpensourceProject %>
      <hr />
      <a href="<%= upcoming_admin_opensource_projects_path %>" data-turbolinks-action="replace">
        <i class="fa fa-newspaper-o"></i> 待审核列表...
      </a>
      <% end %>
    </div>
  </div>
</div>
